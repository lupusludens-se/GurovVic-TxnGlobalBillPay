@page "/signout" 

@using CustomerPortal.Models;

@layout MainLayout;
@inject SessionState state;
@inject NavigationManager navigationManager;

<div class="mt-4">
    <div class="card mt-4">
        <div class="card-header border-0 pb-0 grid grid-cols-6 gap-6">
            <img class="img-fluid my-1 ml-1" style="max-height: 200px; width: auto" src="@LogoUrl" />
            <div>
                <h3 class="text-lg font-medium leading-6 text-gray-900 py-3">Are you sure you would like to sign out?</h3>
                <button class="btn btn-primary mb-2"  @onclick="LogOff">Confirm</button>
            </div>
        </div>
    </div>
</div>
